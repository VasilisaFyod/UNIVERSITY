<Window x:Class="UNIVERSITY.AddUpdateEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNIVERSITY"
        mc:Ignorable="d"
        Title="Окно добавления и обновления оборудования" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Margin" Value="5,5"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="BackButton" Width="100" Background="#FFA500" Margin="10,15">Назад</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Left" FontStyle="Italic">Обязательные поля *</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Margin="0,0,0,100">Фото:</TextBlock>
                    <TextBlock>* Наименование:</TextBlock>
                    <TextBlock>* Инвентарный номер:</TextBlock>
                    <TextBlock>Описание товара:</TextBlock>
                    <TextBlock>Подразделение:</TextBlock>
                    <TextBlock>Кабинет:</TextBlock>
                    <TextBlock>* Вес:</TextBlock>
                    <TextBlock>* Нормативный срок службы:</TextBlock>
                    <TextBlock>* Дата постановки на баланс компании:</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Border Height="100">
                        <Image Width="100" Margin="0,3" Source="{Binding PhotoImage}"/>
                    </Border>
                    <Button x:Name="ImageButton" Width="100" Click="ImageButtonClick">Выбор фото</Button>
                    <TextBox Margin="0,3" Text="{Binding Name}"></TextBox>
                    <TextBox Margin="0,3" Text="{Binding InventareNum}"
                             IsReadOnly="{Binding IsEditMode,
                      RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <TextBox Text="{Binding Description}"/>
                    <ComboBox x:Name="OfficeComboBox"
                        Margin="0,5"
                        ItemsSource="{Binding Offices}" 
                        SelectedValuePath="OfficeId" 
                        SelectedValue="{Binding OfficeId, Mode=TwoWay}"
                        DisplayMemberPath="NameOffice"
                        SelectionChanged="OfficeComboBox_SelectionChanged"/>  
                    <ComboBox
                        x:Name="AuditoriumComboBox"
                        ItemsSource="{Binding Auditoriums}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="AuditoriumId"
                        SelectedValue="{Binding AuditoriumId, Mode=TwoWay}"
                        SelectionChanged="Auditorium_SelectionChanged"/>   
                    <TextBox PreviewTextInput="NumericTextBox_PreviewTextInput" Text="{Binding Weigth}"/>
                    <TextBox PreviewTextInput="NumericTextBox_PreviewTextInput" Text="{Binding ServiceLife}"/>
                    <DatePicker PreviewTextInput="NumericTextBox_PreviewTextInput"
                                SelectedDate="{Binding DateBalanceDateTime}"
                                IsEnabled="{Binding IsEditMode,
                        RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Vertical">
            <Button x:Name="SaveButton" Click="SaveButtonClick" Width="100">Сохранить</Button>
            <Button x:Name="DeleteButton" Background="Red" 
                    Click="DeleteButtonClick" Margin="0,10" Width="100"
                    Visibility="{Binding IsAdmin, 
                RelativeSource={RelativeSource AncestorType=Window}, 
                Converter={StaticResource BoolToVis}}">
            Удалить</Button>
        </StackPanel>
    </Grid>
</Window>
