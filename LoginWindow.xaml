<Window x:Class="UNIVERSITY.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNIVERSITY"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Image Source="/Images/logo.png" Width="150"></Image>
            <TextBlock Margin="10">Логин</TextBlock>
            <TextBox x:Name="LoginTextBox" Margin="10"></TextBox>
            <TextBlock Margin="10">Пароль</TextBlock>
            <PasswordBox x:Name="PasswordTextBox" Margin="10"></PasswordBox>
            <Button Width="100" Margin="10" Click="LoginButton">Войти</Button>
            <Button Width="100" Margin="10" Click="GuestButton">Войти как гость</Button>
            <TextBlock x:Name="ErrorTextBlock" HorizontalAlignment="Center"></TextBlock>
        </StackPanel>
        
    </Grid>
</Window>
